<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_guide"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:civ_border_color="@color/light_black"
                app:civ_border_width="1dp"/>

            <TextView
                android:id="@+id/text_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/img_guide"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="姓名"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/text_guide_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_guide_name"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/img_guide"
                android:ellipsize="end"
                android:text="男"
                android:gravity="center" />
            <TextView
                android:id="@+id/text_guide_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_guide_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/text_guide_gender"
                android:ellipsize="end"
                android:gravity="center"
                android:text="17"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="负责的景区："
            android:textSize="16sp" />
        <TextView
            android:id="@+id/text_guide_target_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>